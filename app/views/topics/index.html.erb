<h1>Listing topics</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td> <%= topic.subject %></td>
        <td><%= link_to 'Show', [@forum, topic] %></td>
        <td><%= social_share_button_tag(topic.subject, :url => forum_topic_url(topic.forum, topic )) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

